@using Entity
@model List<Category>

<div class="card shadow-sm">
    <div class="card-header bg-info text-white text-center">
        <h4>Kategori Yönetimi</h4>
    </div>
    <div class="card-body">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">@TempData["Message"]</div>
        }
        <a asp-action="Create" class="btn btn-primary mb-3">Yeni Kategori Ekle</a>
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Kategori Adı</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.Name</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-warning">Düzenle</a>
                            <form asp-action="Delete" asp-route-id="@category.Id" method="get" style="display:inline;" onsubmit="return confirm('Bu kategoriyi silmek istediğinize emin misiniz?');">
                                <button type="submit" class="btn btn-sm btn-danger">Sil</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="text-center">
            <a asp-action="Index" asp-controller="Book" class="btn btn-secondary">Geri Dön</a>
        </div>
    </div>
</div>