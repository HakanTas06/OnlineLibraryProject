@using Entity
@model Category

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-warning text-white text-center">
                <h4>Kategori Düzenle</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label">Kategori Adı</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-animated">Kaydet</button>
                        <a asp-action="Index" class="btn btn-secondary ms-2 btn-animated">Geri Dön</a>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-animated {
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-animated:hover {
            transform: scale(1.05); /* X ve Y eksenlerinde öğeyi 1.05 kat büyütür. */
    }

    .btn-primary.btn-animated:hover {
        background-color: #0056b3;
    }

    .btn-secondary.btn-animated:hover {
        background-color: #6c757d;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}