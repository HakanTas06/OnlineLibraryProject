@model BorrowViewModel

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-danger text-white text-center py-3">
                <h4 class="mb-0">Kitap İade Onayı</h4>
            </div>
            <div class="card-body p-4">
                <p class="text-center lead">Aşağıdaki kitabı iade etmek istediğinizden emin misiniz?</p>
                <dl class="row">
                    <dt class="col-sm-4 fw-bold">Kitap Adı:</dt>
                    <dd class="col-sm-8">@Model.BookTitle</dd>
                    <dt class="col-sm-4 fw-bold">Ödünç Alma Tarihi:</dt>
                    <dd class="col-sm-8">@Model.BorrowDate.ToShortDateString()</dd>
                    <dt class="col-sm-4 fw-bold">İade Edilmesi Gereken Tarih:</dt>
                    <dd class="col-sm-8">@Model.DueDate.ToShortDateString()</dd>
                </dl>
                @if (DateTime.Now > Model.DueDate)
                {
                    <div class="alert alert-warning text-center" role="alert">
                        <strong>Dikkat!</strong> Bu kitap gecikmiş, lütfen hemen iade edin.
                    </div>
                }
                <form asp-action="ReturnBook" method="post" class="text-center">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger btn-lg px-5">İade Et</button>
                    <a href="/Borrow/Index" class="btn btn-secondary btn-lg ms-3 px-5">İptal</a>
                </form>
            </div>
        </div>
    </div>
</div>