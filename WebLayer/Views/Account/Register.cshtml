@model RegisterViewModel

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white text-center">
                <h4>Kayıt Ol</h4>
            </div>
            <div class="card-body">
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success mt-3">@TempData["Message"]</div>
                }
                <form asp-action="Register" method="post">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">İsim</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Surname" class="form-label">Soyisim</label>
                        <input asp-for="Surname" class="form-control" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">E-posta</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Username" class="form-label">Kullanıcı Adı</label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Şifre</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">Şifre Onayı</label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-success">Kayıt Ol</button>
                    </div>
                    
                </form>
                <p class="login-prompt text-center mt-3">
                    Bir Hesabın Var Mı? <a href="/Account/Login" class="login-link">Giriş Yap</a>
                </p> 
            </div>
        </div>
    </div>
</div>

<style>
.login-prompt {
    font-size: 1rem;
    color: #555;
    margin-top: 15px;
}

.login-link {
    color: #28a745;
    font-weight: 600;
    text-decoration: none;
    padding: 2px 6px;
    border-radius: 4px;
    transition: all 0.3s ease;
}

.login-link:hover {
    color: #fff;
    background-color: #28a745;
    text-decoration: none;
}

.login-link:active {
    background-color: #218838;
}
</style>