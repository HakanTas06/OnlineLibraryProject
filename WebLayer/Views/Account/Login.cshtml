@model LoginViewModel

<div class="row justify-content-center">
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white text-center">
                <h4>LOGIN</h4>
            </div>
            <div class="card-body">
                <form asp-action="Login" method="post">
                    <div class="mb-3">
                        <label class="form-label">Kullanıcı Adı</label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Parola</label>
                        <input asp-for="Password" class="form-control" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger mt-3">
                            @ViewBag.Error
                            @if (ViewBag.Error.Contains("Doğrulayın"))
                            {
                                <br />
                                <small>Lütfen e-posta kutunuzu kontrol edin veya spam klasörüne bakın.</small>
                            }
                        </div>
                    }
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success mt-3">@TempData["Message"]</div>
                    }
                </form>
                <p class="text-center mt-3">
                    Hesabın yok mu? <a href="/Account/Register">Kayıt Ol</a> |
                    <a href="/Account/ForgotPassword">Şifremi Unuttum</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}