@model ResetPasswordViewModel

<div class="row justify-content-center mt-5">
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white text-center">
                <h4>Şifre Sıfırlama</h4>
            </div>
            <div class="card-body">
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger text-center" role="alert">
                        @ViewBag.Error
                    </div>
                }
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success text-center" role="alert">
                        @TempData["Message"]
                    </div>
                }
                <form asp-action="ResetPassword" method="post">
                    <input type="hidden" asp-for="Token" />
                    <div class="form-group mb-4">
                        <label asp-for="Password" class="form-label fw-bold">Yeni Şifre</label>
                        <input asp-for="Password" class="form-control" aria-required="true" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="ConfirmPassword" class="form-label fw-bold">Şifre Onayı</label>
                        <input asp-for="ConfirmPassword" class="form-control" aria-required="true" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-lg">Şifreyi Sıfırla</button>
                        <a asp-action="Login" class="btn btn-secondary btn-lg ms-3">Geri Dön</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}