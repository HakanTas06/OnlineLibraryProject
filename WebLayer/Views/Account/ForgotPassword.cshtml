@model ForgotPasswordViewModel

<div class="row justify-content-center">
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-header bg-warning text-white text-center">
                <h4>Şifremi Unuttum</h4>
            </div>
            <div class="card-body">
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }
                <p>Şifrenizi sıfırlamak için e-posta adresinizi girin.</p>
                <form asp-action="ForgotPassword" method="post">
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label">E-posta Adresi</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-warning">Gönder</button>
                        <a asp-action="Login" class="btn btn-secondary ms-2">Geri Dön</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}